{
  "compilerOptions": {
    "target": "es5",
    "module": "es6",
    "lib": ["ES5", "ES6"],
    "declaration": true,
    "declarationMap": true,
    "outDir": "es6",
    "sourceMap": true,
    "strict": true,
    "jsx": "react",
    "removeComments": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "types": ["node"],
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true ,
    "moduleResolution": "node"
  },
  "files": ["src/index.tsx"]
}
