{
  "compilerOptions": {
    "target": "es5",
    "module": "esnext",
    "lib": [
      "ES5",
      "ES6",
      "DOM"
    ],
    "declaration": true,
    "outDir": "./es6",
    "strict": true,
    "jsx": "react",
    "types": [
      "node"
    ],
    "allowSyntheticDefaultImports": true,
    "typeRoots": [
      "node_modules/@types"
    ],
    "moduleResolution": "node",
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true
  },
  "include": [
    "src"
  ]
}
