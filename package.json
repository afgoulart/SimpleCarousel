{
  "name": "@arranjae/react-simple-carousel",
  "version": "1.0.11",
  "description": "Simple Carousel - React and TypeScript",
  "author": {
    "name": "Andr√© Filipe Goulart",
    "email": "afgoulart.rj@gmail.com",
    "url": "https://github.com/afgoulart"
  },
  "main": "cjs/index.js",
  "module": "es6/index.js",
  "types": "es6/index.d.ts",
  "sideEffects": false,
  "files": [
    "es6",
    "cjs",
    "umd",
    "lib",
    "src",
    "index.d.ts",
    "LICENSE"
  ],
  "keywords": [
    "typescript",
    "react",
    "carousel",
    "slider",
    "responsible",
    "mobile"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/afgoulart/SimpleCarousel.git",
    "directory": "packages/@arranjae/react-simple-carousel"
  },
  "bugs": {
    "url": "https://github.com/afgoulart/SimpleCarousel/issues"
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "clean": "rimraf lib && rimraf es6 && rimraf cjs && rimraf umd",
    "build": "npm run clean && npm run build-es6 && npm run build-cjs && npm run build-umd && npm run build-css && npm run build-legacy",
    "build-es6": "tsc",
    "build-cjs": "babel es6 -D -d cjs",
    "build-umd": "rollup -c",
    "build-css": "npm run build-css:normal && npm run build-css:min",
    "build-css:min": "node-sass src/styles.scss umd/SimpleCarousel.min.css  --output-style=compressed --source-map=true",
    "build-css:normal": "node-sass src/styles.scss umd/SimpleCarousel.css",
    "build-legacy": "babel es6 -D -d lib",
    "release:major": "release-it major",
    "release:minor": "release-it minor",
    "release": "release-it"
  },
  "dependencies": {
    "classnames": "^2.2.6"
  },
  "devDependencies": {
    "@types/classnames": "^2.2.10",
    "@babel/cli": "^7.10.5",
    "@babel/core": "^7.11.1",
    "@babel/plugin-proposal-class-properties": "^7.10.4",
    "@babel/preset-env": "^7.11.0",
    "@babel/preset-react": "^7.10.4",
    "@babel/preset-typescript": "^7.10.4",
    "babel-plugin-add-module-exports": "^1.0.2",
    "@types/node": "^14.6.0",
    "@types/react": "^16.9.43",
    "@types/react-dom": "^16.9.8",
    "node-sass": "^4.14.1",
    "release-it": "^13.6.8",
    "rimraf": "^2.6.1",
    "rollup": "^1.16.4",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-replace": "^2.2.0",
    "rollup-plugin-scss": "^2.6.0",
    "rollup-plugin-uglify": "^6.0.4",
    "typescript": "^3.9.7"
  },
  "peerDependencies": {
    "react": "^16.8.0",
    "react-dom": "^16.8.0"
  },
  "license": "MIT",
  "release-it": {
    "git": {
      "commitMessage": "chore(release): version v${version}",
      "requireBranch": false,
      "requireCleanWorkingDir": false
    },
    "hooks": {
      "before:init": "npm run build"
    }
  }
}
