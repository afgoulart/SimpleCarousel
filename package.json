{
  "name": "@arranjae/react-simple-carousel",
  "version": "1.0.5",
  "description": "Simple Carousel - React and TypeScript",
  "author": {
    "name": "AndrÃ© Filipe Goulart",
    "email": "afgoulart.rj@gmail.com",
    "url": "https://github.com/afgoulart"
  },
  "keywords": [
    "typescript",
    "react",
    "carousel",
    "slider",
    "responsible",
    "mobile"
  ],
  "types": "./lib/types.d.ts",
  "dependencies": {
    "classnames": "^2.2.6"
  },
  "peerDependencies": {
    "react": "^15.0.0 || ^16.0.0"
  },
  "devDependencies": {
    "@types/classnames": "^2.2.10",
    "@types/react": "16.9.19",
    "@types/react-dom": "16.9.5",
    "release-it": "^13.6.6",
    "typescript": "3.7.5"
  },
  "main": "lib/index.js",
  "module": "es/index.js",
  "files": [
    "es",
    "lib",
    "src"
  ],
  "scripts": {
    "start": "react-scripts start",
    "build": "npm run build:commonjs && npm run build:es",
    "build:commonjs": "tsc -m commonjs --outDir lib/",
    "build:es": "tsc -m esnext --outDir es/",
    "prebuild": "rm -rf ./lib ./es",
    "test": "react-scripts test --env=jsdom",
    "eject": "react-scripts eject",
    "release": "release-it",
    "release:patch": "release-it patch",
    "release:minor": "release-it minor",
    "release:major": "release-it major"
  },
  "release-it": {
    "git": {
      "commitMessage": "chore(release): version v${version}",
      "requireBranch": false,
      "requireCleanWorkingDir": false
    },
    "hooks": {
      "before:init": "npm run build"
    }
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ]
}
